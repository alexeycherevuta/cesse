{
  "name": "@cyberforce/essentials",
  "version": "0.2.4",
  "description": "Core package for websites based on Cyberforce framework. Transforming ideas into reliable applications.",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "build": "npm run build:remove && npx tsc && npm run copy:polyfills && npm run build:move",
    "build:remove": "npx rimraf ./build",
    "build:move": "cd ./build/src && mv * ../ && cd .. && npx rimraf ./src",
    "build:deploy": "npm version patch && npm run build && npm run copy:token && npm run copy:package && npm run deploy",
    "linter": "npx tslint --project tslint.rules.json",
    "watch": "npx nodemon -e ts,tsx,js -w ./src -x npx tsc",
    "deploy": "npm publish ./build --access public",
    "test": "npx jest",
    "test:coverage": "npx jest --coverage",
    "test:watch": "npx jest --watchAll --runInBand",
    "set:token": "echo \"//registry.npmjs.org/:_authToken=${NPM_ACCESS_TOKEN}\" > .npmrc",
    "copy:package": "cp package.json ./build/package.json",
    "copy:token": "cp ./.npmrc ./build/.npmrc",
    "copy:polyfills": "cp ./src/common/polyfills.js ./build/src/polyfills.js"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:cyberforce-developers/cyberforce-serverless/cyberforce-essentials.git"
  },
  "author": "Grzegorz Wozniak & Cyberforce IT team",
  "copyright": "All rights reserved (C) 2018-2020",
  "license": "ISC",
  "pre-commit": [
    "linter",
    "test:coverage",
    "build"
  ],
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.2.1",
    "@types/jsdom": "^16.2.1",
    "@types/lodash": "^4.14.150",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-router-dom": "^5.1.5",
    "@types/uuid": "^7.0.3",
    "await-to-js": "^2.1.1",
    "axios-mock-adapter": "^1.18.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^25.5.3",
    "jest-serial-runner": "^1.1.0",
    "jsdom": "^16.2.2",
    "nodemon": "^2.0.3",
    "path": "^0.12.7",
    "pre-commit": "^1.2.2",
    "promise": "^8.1.0",
    "raf": "^3.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "tslint": "^6.1.2",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "lodash": "^4.17.15",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "mobx-utils": "^5.5.7",
    "nanoid": "^3.1.3",
    "nanoid-generate": "^1.0.0",
    "prismic-javascript": "^2.7.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "uuid": "^8.0.0"
  }
}
