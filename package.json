{
  "name": "cyberforce-essentials",
  "version": "0.0.2",
  "description": "Core package for Cyberforce solution. You can use it to build amazing web applications.",
  "main": "index.js",
  "scripts": {
    "build": "npm run remove:build && npx tsc && npm run copy:polyfills && tools/version.sh patch",
    "publish": "cd build && npm publish",
    "linter": "npx tslint --project tslint.rules.json",
    "test": "npx jest",
    "test:coverage": "npx jest --coverage",
    "test:watch": "npx jest --watchAll --runInBand",
    "remove:build": "npx rimraf ./build",
    "copy:polyfills": "cp ./src/client/polyfills.js ./build/polyfills.js"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:cyberforce-developers/cyberforce-serverless/cyberforce-essentials.git"
  },
  "author": "",
  "license": "ISC",
  "pre-commit": [
    "linter",
    "test"
  ],
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.150",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-router-dom": "^5.1.5",
    "@types/uuid": "^7.0.3",
    "await-to-js": "^2.1.1",
    "axios-mock-adapter": "^1.18.1",
    "jest": "^25.5.3",
    "path": "^0.12.7",
    "pre-commit": "^1.2.2",
    "promise": "^8.1.0",
    "raf": "^3.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "tslint": "^6.1.2",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "lodash": "^4.17.15",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "mobx-utils": "^5.5.7",
    "nanoid": "^3.1.3",
    "nanoid-generate": "^1.0.0",
    "uuid": "^8.0.0"
  }
}
